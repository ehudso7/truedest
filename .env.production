# Production Environment Variables
# IMPORTANT: Replace all placeholder values with real production keys

# Database (Use managed PostgreSQL service like Supabase, Neon, or AWS RDS)
DATABASE_URL="postgresql://user:password@host:5432/truedest_prod"
DIRECT_URL="postgresql://user:password@host:5432/truedest_prod"

# NextAuth
NEXTAUTH_URL="https://truedest.com"
NEXTAUTH_SECRET="GENERATE_NEW_SECRET_FOR_PRODUCTION_USE_OPENSSL"

# Supabase (Production project)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-production-anon-key"
SUPABASE_SERVICE_KEY="your-production-service-key"

# Stripe LIVE Keys (Switch to live mode in Stripe dashboard)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# GDS Integration - Amadeus (Production credentials)
AMADEUS_CLIENT_ID="your-production-amadeus-id"
AMADEUS_CLIENT_SECRET="your-production-amadeus-secret"
AMADEUS_HOSTNAME="api.amadeus.com"

# Google Services (Production API keys with restrictions)
GOOGLE_MAPS_API_KEY="your-restricted-maps-api-key"
GOOGLE_CLIENT_ID="your-production-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-production-oauth-secret"

# AWS Services (Production IAM credentials)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-production-access-key"
AWS_SECRET_ACCESS_KEY="your-production-secret-key"
AWS_S3_BUCKET="truedest-assets-prod"

# Redis (Use managed Redis like Redis Cloud or AWS ElastiCache)
REDIS_URL="redis://user:password@your-redis-host:6379"

# Pusher (Production app)
NEXT_PUBLIC_PUSHER_APP_KEY="your-production-pusher-key"
PUSHER_APP_ID="your-production-app-id"
PUSHER_SECRET="your-production-pusher-secret"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"

# SendGrid (Production account with verified domain)
SENDGRID_API_KEY="your-production-sendgrid-key"
SENDGRID_FROM_EMAIL="noreply@truedest.com"

# Twilio (Production account)
TWILIO_ACCOUNT_SID="your-production-account-sid"
TWILIO_AUTH_TOKEN="your-production-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# OpenAI (Production API key with usage limits)
OPENAI_API_KEY="your-production-openai-key"

# Sentry (Production project)
NEXT_PUBLIC_SENTRY_DSN="your-production-sentry-dsn"
SENTRY_AUTH_TOKEN="your-production-sentry-token"

# Analytics (Production projects)
NEXT_PUBLIC_MIXPANEL_TOKEN="your-production-mixpanel-token"
NEXT_PUBLIC_POSTHOG_KEY="your-production-posthog-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Facebook OAuth (Production app)
FACEBOOK_CLIENT_ID="your-production-facebook-app-id"
FACEBOOK_CLIENT_SECRET="your-production-facebook-secret"

# Apple OAuth (Production credentials)
APPLE_ID="your-production-apple-id"
APPLE_TEAM_ID="your-production-team-id"
APPLE_KEY_ID="your-production-key-id"
APPLE_PRIVATE_KEY="your-production-private-key"

# Feature Flags
ENABLE_PWA="true"
ENABLE_ANALYTICS="true"
ENABLE_ERROR_TRACKING="true"
ENABLE_CHAT_SUPPORT="true"

# Environment
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://truedest.com"
NEXT_PUBLIC_API_URL="https://truedest.com/api"

# Email Settings
EMAIL_FROM="TrueDest <noreply@truedest.com>"
EMAIL_REPLY_TO="support@truedest.com"